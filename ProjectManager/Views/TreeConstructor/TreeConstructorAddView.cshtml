@model ProjectManager.Models.TreeConstructorModel



@{
    ViewBag.Title = "Add node definition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add node definition</h2>
@*TreeConstructorModelsController*@

@using (Html.BeginForm("Create", "TreeConstructor"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.Level, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Level, new { @class = "form-control-no_border", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MasterItemID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.MasterItemID, new { @class = "form-control-no_border", @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsBranch, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="margin-left: 30px">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.IsBranch)
                    @Html.ValidationMessageFor(model => model.IsBranch, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ItemName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ItemName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AutoCreate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="margin-left: 30px">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.AutoCreate)
                    @Html.ValidationMessageFor(model => model.AutoCreate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ItemDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ItemDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ItemDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="btn-group col-md-offset-2">
    @Html.ActionLink("Back to Home", "Index", "Home", new { @class = "btn btn-success btn-sm" })
    @Html.ActionLink("Back to List", "TreeConstructorListView", "TreeConstructor", new { @class = "btn btn-primary btn-sm" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
